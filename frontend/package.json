{
  "name": "github-stats-spark-dashboard",
  "version": "1.0.0",
  "description": "Interactive repository comparison dashboard for GitHub Stats Spark",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "clean": "node -e \"const fs=require('fs'); ['../docs','dist','.vite'].forEach(d=>{if(fs.existsSync(d)){fs.rmSync(d,{recursive:true,force:true}); console.log('✓ Cleaned',d)}})\"",
    "lint": "eslint src --ext js,jsx --max-warnings 0",
    "lint:fix": "eslint src --ext js,jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css}\"",
    "prebuild": "npm run clean && npm run lint && npm run format:check",
    "build": "vite build",
    "postbuild": "node -e \"const fs=require('fs'); const path=require('path'); const src='../data'; const dest='../docs/data'; if(fs.existsSync(src)){if(fs.existsSync(dest)){fs.rmSync(dest,{recursive:true,force:true});} fs.mkdirSync(dest,{recursive:true}); fs.cpSync(src,dest,{recursive:true}); console.log('✓ Copied data to docs/data');}\"",
    "build:analyze": "npm run build && vite-bundle-visualizer",
    "preview": "vite preview --port 4173 --host",
    "lighthouse": "lhci autorun",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@use-gesture/react": "^10.3.1",
    "chart.js": "^4.5.1",
    "dexie": "^4.2.1",
    "react": "^19.2.3",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.3",
    "react-modal-sheet": "^5.2.1",
    "web-vitals": "^5.1.0",
    "workbox-window": "^7.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@lhci/cli": "^0.15.1",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.1.0",
    "prettier": "^3.8.1",
    "terser": "^5.46.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "workbox-window": "^7.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
