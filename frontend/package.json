{
  "name": "github-stats-spark-dashboard",
  "version": "1.0.0",
  "description": "Interactive repository comparison dashboard for GitHub Stats Spark",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "postbuild": "node -e \"const fs=require('fs'); const path=require('path'); const src='../data'; const dest='../docs/data'; if(fs.existsSync(src)){fs.mkdirSync(dest,{recursive:true}); fs.cpSync(src,dest,{recursive:true}); console.log('âœ“ Copied data to docs/data');}\"",
    "preview": "vite preview --port 4173 --host",
    "lighthouse": "lhci autorun",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext js,jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,css}\""
  },
  "dependencies": {
    "@use-gesture/react": "^10.3.1",
    "chart.js": "^4.5.1",
    "dexie": "^4.2.1",
    "react": "^19.2.3",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.3",
    "react-modal-sheet": "^5.2.1",
    "web-vitals": "^5.1.0",
    "workbox-window": "^7.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@lhci/cli": "^0.15.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "prettier": "^3.7.4",
    "terser": "^5.44.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "workbox-window": "^7.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
